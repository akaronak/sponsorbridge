      "title": "Escrow Auto-Release Job Duration",
      "type": "timeseries",
      "targets": [{
        "expr": "eventra_escrow_autorelease_duration_seconds_sum{application=\"eventra\"} / eventra_escrow_autorelease_duration_seconds_count{application=\"eventra\"}",
        "legendFormat": "Avg Duration"
      }]
    },

    {
      "collapsed": false,
      "gridPos": { "h": 1, "w": 24, "x": 0, "y": 33 },
      "id": 400,
      "title": "üîí Security",
