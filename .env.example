# ═══════════════════════════════════════════════════════
# Eventra — Root Environment Configuration
# Used by: docker-compose.yml, server-mock.js, server.js
# Copy this file to .env and fill in your values
# ═══════════════════════════════════════════════════════

# ─── Application ─────────────────────────────────────
APP_NAME=Eventra

# ─── JWT (REQUIRED) ──────────────────────────────────
# Generate: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=

# ─── Server Ports ────────────────────────────────────
PORT=8080
SERVER_PORT=8080

# ─── MongoDB ─────────────────────────────────────────
MONGODB_URI=mongodb://localhost:27017/eventra

# ─── Redis ───────────────────────────────────────────
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ─── CORS ────────────────────────────────────────────
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# ─── Spring Profile ─────────────────────────────────
SPRING_PROFILES_ACTIVE=dev

# ─── Google Gemini AI ────────────────────────────────
GEMINI_API_KEY=
GEMINI_API_URL=https://generativelanguage.googleapis.com/v1beta/models/gemini-2.0-flash:generateContent

# ─── Cloudinary ──────────────────────────────────────
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# ─── Razorpay ────────────────────────────────────────
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=
# ─── RabbitMQ (STOMP Broker Relay) ──────────────
# Used for horizontal scaling of WebSocket messaging
RABBITMQ_USER=eventra
RABBITMQ_PASS=eventra_dev
RABBITMQ_VHOST=/
RABBITMQ_HOST=localhost
RABBITMQ_STOMP_PORT=61613
RABBITMQ_AMQP_PORT=5672
RABBITMQ_MGMT_PORT=15672
# Set to true when running via docker-compose
STOMP_BROKER_RELAY_ENABLED=false
# ─── Observability ───────────────────────────────────
# Distributed tracing (OpenTelemetry → Jaeger)
TRACING_ENABLED=false
TRACING_SAMPLING=0.1
OTLP_TRACING_ENDPOINT=http://localhost:4318/v1/traces

# Grafana
GRAFANA_PORT=3001
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=eventra_grafana

# Prometheus
PROMETHEUS_PORT=9090

# Loki (log aggregation)
LOKI_PORT=3100
LOKI_URL=http://localhost:3100

# Jaeger (tracing UI)
JAEGER_UI_PORT=16686

# Log levels (env-driven category overrides)
LOG_LEVEL_AUTH=INFO
LOG_LEVEL_PAYMENTS=INFO
LOG_LEVEL_MESSAGING=INFO
LOG_LEVEL_RATELIMIT=INFO

# ─── Demo Users (mock server only) ───────────────────
